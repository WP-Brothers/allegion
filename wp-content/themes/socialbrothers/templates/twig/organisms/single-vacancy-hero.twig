<section class="container {{ container_class }}">
	<div class="flex flex-col gap-6 w-full md:w-3/4">
		<div class="border border-secondary-light rounded p-10 flex flex-col">
			{% include "atoms/heading/h1.twig"
        with {
          title: hero.title
        }
    %}
			<div class="flex items-center gap-4">
				{% for label in hero.labels %}
					{% include "atoms/label.twig"
            with {
              label: label.name,
              icon: label.icon,
              icon_color: 'text-[var(--primary-DEFAULT)]',
              type: label.type
            }
        %}
				{% endfor %}
			</div>
		</div>

		{% if contact.button %}
			<div class="border border-secondary-light rounded p-4 flex items-center gap-4 [&_p]:mb-0">
				{% include "atoms/button.twig" with contact.button %}
				{{ contact.content|raw }}
			</div>
		{% endif %}
	</div>
</section>
