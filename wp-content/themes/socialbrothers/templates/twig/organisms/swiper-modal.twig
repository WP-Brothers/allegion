<dialog class="modal w-full h-full bg-transparent !border-0 focus-visible:outline-none backdrop-opacity-40 modal-swiper" data-modal="modal-swiper">
    <div class="flex items-center justify-center w-full h-full">
        <div class="container">

        <div class="w-full flex flex-col lg:flex-row">
            
            <div class="w-1/12 flex justify-center items-center">
                <div class="swiper-button-prev"></div>
            </div>

            <div class="w-5/12">
            
                    <div class="modal-swiper__image-slider overflow-hidden">
                        <div class="swiper-wrapper modal-swiper__image-slider-wrapper">
                            {% for slide in slides %}
                                <div class="swiper-slide modal-swiper__image-slider-image-wrapper bg-white !h-[451px]">
                                    {% include 'atoms/image.twig' with {image_id: slide, image_classes: 'h-full w-full p-10 object-contain'} %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>


                    <div class="modal-swiper__nav-slider overflow-hidden pt-10 w-full">
                        <div class="swiper-wrapper">
                             {% for slide in slides %}
                                <div class="swiper-slide aspect-square bg-white flex justify-between items-center cursor-pointer p-3">
                                    {% include 'atoms/image.twig' with {image_id: slide, image_classes: '!aspect-square !h-auto !w-full object-contain'} %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

            </div>

            <div class="w-1/12 flex justify-center items-center">
                <div class="swiper-button-next {{ background_image ? 'has-background-image' : '' }}"></div>
            </div>
            
        </div>

        </div>
    </div>
</dialog>