<header id="header" class="top-0 sticky bg-white z-[100] w-full">
	<div class="w-full bg-offwhite ">
	<div class="container">
	
		<div class="flex justify-end w-full py-4 gap-7">
			{{ menu_top|raw }}

			{% include "molecules/language-switch.twig" with {languages} %}
		</div>
	</div>
	</div>



	<div class="container">
		<div class="gap-4 py-6 md:flex md:items-center xl:gap-5">
			<div class="flex items-center justify-between">
				<a href="/">
					{% include 'atoms/image.twig' with {image_id: logo_id, size: 'full', image_classes: 'h-[29px] max-w-[225px] object-contain'} %}
				</a>

				<button id="toggle-header-nav" class="flex items-center justify-center w-12 h-12 md:hidden">
					{% include 'atoms/icon.twig' with {icon: 'menu', size: '32', class: 'active:hidden', color: 'text-primary'} %}
					{% include 'atoms/icon.twig' with {icon: 'close', size: '32', class: 'hidden active:flex', color: 'text-primary'} %}
				</button>
			</div>

			<div id="header-nav" class="max-h-[calc(100vh_-_80px)] top-20 md:top-0 overflow-auto md:overflow-unset hidden absolute w-full right-0 p-4 md:p-0 gap-3 md:relative bg-white md:flex items-end md:items-center md:justify-between md:flex-grow">
				{{ menu|raw }}

				<div class="flex flex-col flex-grow gap-4 md:flex-row md:justify-end md:items-center md:gap-5">
					{% include 'atoms/button.twig' with  button %}
					<button id="toggle-header-search" class="items-center justify-center hidden w-6 h-6 transition-colors text-primary hover:text-primary-dark md:flex">
						{% include 'atoms/icon.twig' with {icon: 'search', size: '24', color: 'text-font'} %}
					</button>
					<div class="md:hidden">
						{% include "molecules/search-bar.twig" %}
					</div>
				</div>
			</div>
			<div id="header-search" class="right-0 hidden w-full pb-4 translate-y-full bg-white md:absolute md:bottom-0">
				<div class="container">
					<div class="flex justify-end">
						<div class="max-w-[400px]">
							{% include "molecules/search-bar.twig" %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>
