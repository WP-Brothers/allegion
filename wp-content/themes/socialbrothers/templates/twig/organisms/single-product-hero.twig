<section class="bg-supporting-5 pt-4 lg:pt-[84px] pb-10">
    <div class="container">
        <div class="relative flex flex-col-reverse w-full lg:flex-row lg:justify-between">
            {% if safety_index %}
               	<img src="{{safety_index|raw}}" alt="safety index" class="w-[52px] h-[52px] object-contain absolute top-0 left-0 hidden lg:block">
            {% endif %}


            <div class="w-full lg:w-5/12 lg:ml-1/12 flex justify-center lg:block">
                {% if product_image %}
                    {% include "atoms/image.twig" with {image_id: product_image, image_classes: 'product-single__display-image w-[320px] h-[320px] lg:h-[499px] lg:w-[499px] object-contain'} %}
                {% endif %}      
            </div>

            <div class="w-full lg:w-5/12">

                <div class="flex flex-col-reverse">
                    {% include "atoms/heading/h1.twig" with {title, class: 'h3'} %}
                    
                    {% if article_number %}
                        <span> {{article_number|raw}} </span>
                    {% endif %}

                </div>

                <div class="hidden lg:block">
                    {% if price %}
                        {% include "atoms/heading/h4.twig" with {title: price} %}
                    {% endif %}

                    {% include "molecules/keurmerken.twig" with {product_single: true} %}

                    {% if bullet_points %}
                        <div class="mt-9">
                            {{bullet_points|raw}}
                        </div>
                    {% endif %}
                </div>
                
            </div>
        </div>
    </div>
</section>
{% if images %}
    <section>
        <div class="container">
            {% include "molecules/image-select.twig" with images %} 

        </div>
    </section>

    {% include "molecules/product-single-cta.twig" with {mobile: true} %}

    <section>
        <div class="container">

            <div class="block lg:hidden">
                {% include "molecules/keurmerken.twig" with {product_single: true} %}

                {% if bullet_points %}
                    <div class="mt-9">
                        {{bullet_points|raw}}
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endif %}
        